#include <stdio.h>

// Define macro to check odd number
#define IS_ODD(x) (x & 1)

int main()
{
    int num;

    // Input a number from user
    printf("Enter any number to check even or odd: ");
    scanf("%d", &num);

    if (IS_ODD(num))
        printf("%d is ODD\n", num);
    else
        printf("%d is EVEN\n", num);

    return 0;
}
